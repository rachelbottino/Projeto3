     <section id="seus_eventos">
    	<div class="container">
    		<h2 class="nino-sectionHeading">
				<span class="nino-subHeading">Eventos</span>
			</h2>
            <br>
            <h2 href="novo_evento" class="nino-sectionHeading"><a href="novo_evento">
				Criar Evento
			</a></h2>
			<br>

    		<h2 class="nino-sectionHeading">
				Eventos criados por mim
			</h2>
			<div class="sectionContent">
				<div class="row">
					<% for(var evento=0; evento < events.length; evento++) { %>
					<div class="col-md-4 col-sm-4">
						<article>
							<div class="articleThumb">
								<a href="#"><img src="http://localhost:3000/<%=events[evento].foto%>" alt="" height="250" width="400"></a>
								<!--
								<div class="date">
									<span class="number">7</span>
									<span class="text">Nov</span>
								</div>
								-->
							</div>
							<h3 class="articleTitle"><a href=""><%=events[evento].nome%></a></h3>
							<p class="articleDesc">
								<%=events[evento].descricao%>
							</p>
							<div class="articleMeta">
							<% 
							var interesses_evento = [];

							if(events[evento].low_carb == 's'){
                				interesses_evento.push(" Low Carb");
            				}
				            if(events[evento].vegano == 's'){
				                interesses_evento.push(" Vegana");
				            }
				            if(events[evento].vegetariano == 's'){
				                interesses.push(" Vegetariana");
				            }
				            if(events[evento].sem_glutem == 's'){
				                interesses_evento.push(" Sem GlÃºten");
				            }
				            if(events[evento].sem_lactose == 's'){
				                interesses_evento.push(" Sem Lactose");
				            }
				            if(events[evento].cross_fit == 's'){
				                interesses_evento.push(" Cross Fit");
				            }
				            if(events[evento].esporte_coletivo == 's'){
				                interesses_evento.push(" Esportes Coletivos");
				            }
				            if(events[evento].esporte_aventura == 's'){
				                interesses_evento.push(" Esportes de Aventura");
				            }
				            if(events[evento].luta == 's'){
				                interesses_evento.push(" Luta");
				            }
				            if(events[evento].yoga == 's'){
				                interesses_evento.push(" Yoga");
				            }
				            %>
								<a><i class="mdi mdi-run nino-icon"></i><%=interesses_evento%></a><br>
								<a><i class="mdi mdi-map-marker nino-icon"></i><%=events[evento].endereco%>, <%=events[evento].cidade%>, <%=events[evento].estado%></a><br>
								<a><i class="mdi mdi-calendar nino-icon"></i><%=events[evento].data%></a>
								<form class="FiltrarForm" action="/editar_evento">
								<button class="form-control" class="btn btn-success" nome="EditarButton" id="EditarButton" value="<%=events[evento].evento_id%>"><a href="editar_evento/<%=events[evento].evento_id%>">Editar</a></button>

								<button class="form-control" class="btn btn-success" nome="DeleteButton" id="DeleteButton" value="<%=events[evento].evento_id%>"><a href="javascript:void(0)" onClick="delete_evento(<%=events[evento].evento_id%>)">Apagar</a></button>
								<script type="text/javascript">
								    
								    function delete_evento(evento_id){
								    
								        $.ajax({
								            url:"/delete_evento/"+evento_id,
								            type: 'DELETE',
								            success: function(res) {
								                
								                window.location.reload();
								                return false;
								            },
								            error:function(xhr, status, error){
								            
								                console.log(xhr.responseText);
								                alert("Error deleting");
								                return false;
								            }
								        });
								    }

								</script>
								</form>
							</div>
						</article>
					</div>
					<%
					interesses_evento = [];
					}%>
				</div>
			<br>
			<br>
			</div>
    	</div>
    </section><!--/#seus_eventos-->

