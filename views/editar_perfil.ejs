           <label for="endereco"></label><br><input type="text" class="form-control" placeholder="<%=data[0].endereco%>" name="endereco" value="<%=data[0].endereco%>" id="endereÃ§o" required>
           <label for="phone"></label><br><input type="text" class="form-control" placeholder="<%=data[0].telefone%>" name="phone" value="<%=data[0].telefone%>" id="telefone" required>  
