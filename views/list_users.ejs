									interesses.push(" Low carb");
								}
								if(users[usuario].vegano=='s'){
									interesses.push(" Vegano");
								}
								if(users[usuario].vegetariano=='s'){
									interesses.push(" Vegetariano");
								}
								if(users[usuario].sem_glutem=='s'){
									interesses.push(" Sem glÃºten");
								}
								if(users[usuario].sem_lactose=='s'){
									interesses.push(" Sem lactose");
								}		
								if(users[usuario].cross_fit=='s'){
									interesses.push(" Cross fit");
								}
								if(users[usuario].esporte_coletivo=='s'){
									interesses.push(" Esportes coletivos");
								}
								if(users[usuario].esporte_aventura=='s'){
									interesses.push(" Esportes de aventura");
								}
								if(users[usuario].luta=='s'){
									interesses.push(" Luta");
								}
								if(users[usuario].yoga=='s'){
									interesses.push(" Yoga");
								}

					            %>
								<span class="desc"><%=interesses%></span>
							</div>
						</div>
